            fx:id="root"
           	prefWidth="280"
            prefHeight="280"
            minWidth="280"
            minHeight="280"
            maxWidth="Infinity"
            styleClass="card-ejercicio"
            fx:controller="control.ImagenConBotonesController">

    <!-- Nombre del ejercicio -->
    <top>
        <Label fx:id="nombreEjercicio"
               text="Nombre del ejercicio"
               styleClass="card-title"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- Imagen -->
    <center>
        <ImageView fx:id="imageView"
                   fitWidth="250"
                   fitHeight="180"
                   preserveRatio="true"/>
    </center>

